3000. Maximum Area of Longest Diagonal Rectangle
Solution:
import math
from typing import List

class Solution:
    def areaOfMaxDiagonal(self, dimensions: List[List[int]]) -> int:
        max_diagonal = 0
        max_area = 0

        for l, w in dimensions:
            # Calculate diagonal length squared (no need for sqrt yet)
            diag_sq = l * l + w * w
            area = l * w

            # If this rectangle has a longer diagonal, update max
            if diag_sq > max_diagonal:
                max_diagonal = diag_sq
                max_area = area
            # If diagonals are equal, choose rectangle with larger area
            elif diag_sq == max_diagonal:
                max_area = max(max_area, area)

        return max_area
